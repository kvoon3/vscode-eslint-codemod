{
  "publisher": "kvoon",
  "name": "vscode-eslint-codemod",
  "displayName": "ESLint Codemod",
  "version": "0.1.2",
  "private": true,
  "packageManager": "pnpm@10.12.1",
  "description": "Supercharge eslint-plugin-command in VS Code",
  "author": "Kevin Kwong <kvoon@duck.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/kvoon3",
  "homepage": "https://github.com/kvoon3/vscode-eslint-codemod#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/kvoon3/vscode-eslint-codemod"
  },
  "bugs": {
    "url": "https://github.com/kvoon3/vscode-eslint-codemod/issues"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/kvoon3"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "res/logo.png",
  "files": [
    "LICENSE.md",
    "dist/*",
    "res/*"
  ],
  "engines": {
    "vscode": "^1.97.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "eslintCodemod.toggleAutoFix",
        "category": "ESLint codemod",
        "title": "Toggle `autocomplete.autoFix` configuration"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "ESLint Codemod configuration",
      "properties": {
        "eslintCodemod.languageIds": {
          "type": "array",
          "default": [
            "typescript",
            "javascript"
          ],
          "items": {
            "type": "string"
          }
        },
        "eslintCodemod.autocomplete.autoFix": {
          "type": "boolean",
          "default": true,
          "description": "Auto fix code when autocomplete finish"
        },
        "eslintCodemod.autocomplete.docs": {
          "type": "boolean",
          "default": false,
          "description": "Whether open document content of selected command"
        }
      }
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "dev": "nr build --watch --sourcemap",
    "prepare": "nr update && nr update:commands",
    "update": "vscode-ext-gen --output src/generated/meta.ts --scope eslintCodemod",
    "update:commands": "node scripts/commands.js",
    "lint": "eslint .",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish",
    "up": "nlx taze -I major"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:cli",
    "@antfu/ni": "catalog:cli",
    "@antfu/utils": "catalog:utils",
    "@babel/parser": "catalog:cli",
    "@babel/traverse": "catalog:cli",
    "@types/node": "catalog:types",
    "@types/vscode": "^1.97.0",
    "@vscode/vsce": "catalog:cli",
    "bumpp": "catalog:cli",
    "eslint": "catalog:cli",
    "eslint-plugin-command": "catalog:utils",
    "esno": "catalog:cli",
    "lint-staged": "catalog:cli",
    "ofetch": "catalog:utils",
    "pnpm": "catalog:cli",
    "reactive-vscode": "catalog:utils",
    "regexp-tree": "^0.1.27",
    "scule": "catalog:utils",
    "simple-git-hooks": "catalog:cli",
    "swc-plugin-node-cjs-interop": "^0.1.20",
    "tsdown": "catalog:cli",
    "tsup": "catalog:cli",
    "typescript": "catalog:cli",
    "vite": "catalog:cli",
    "vitest": "catalog:cli",
    "vscode-ext-gen": "catalog:cli"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "*": "eslint . --fix"
  }
}
